<Window x:Class="PishiStiray.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PishiStiray"
        mc:Ignorable="d"
        Icon="/Resources/icon.ico"
        WindowStartupLocation="CenterScreen"
        FontFamily="Comic Sans MS"
        Title="ООО «Пиши-стирай»" Height="650" Width="1200" MaxHeight="850" MinHeight="650" MaxWidth="1350" MinWidth="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="65"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="45 5 5 5" HorizontalAlignment="Left">
            <Image Source="/Resources/logo.png"/>
            <TextBlock Text="ООО «Пиши-стирай»" VerticalAlignment="Center" Margin="15 0 0 0" FontSize="24" FontWeight="Bold"/>
        </StackPanel>
        <Grid Grid.Row="1" Background="#ededed">
            <Frame x:Name="mainFrame" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>
</Window>
